<h1>
  player home page
</h1>
<hr>
<h2>
  Leader-Board Information
</h2>

<br>

<table style="width:800px;text-align: center">
  <tr>
    <th>Name</th>
    <th>Win Count</th>
    <th>Lose Count</th>
    <th>Total Count</th>
    <th>Rank</th>
  </tr>

  <% @leader_board_lines.each do |line| %>
    <tr>
      <td><%= line.player_id %></td>
      <td><%= line.win_count %></td>
      <td><%= line.lose_count %></td>
      <td><%= line.total_count %></td>
    </tr>
  <% end %>

</table>

<hr>

<h2>
  Room Information
</h2>

<table style="width:800px;text-align: center">
  <tr>
    <th>Room Number</th>
    <th>Red Player Name</th>
    <th>Blue Player Name</th>
    <th>Room Status</th>
  </tr>
  <% @rooms.each do |room| %>
  <tr>
    <th><%= room.room_id %></th>
    <th><%= room.red_player_name %></th>
    <th><%= room.blue_player_name %></th>
    <th><%= room.room_status %></th>
  </tr>
  <% end %>
</table>